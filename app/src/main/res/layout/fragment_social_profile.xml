<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:padding="24dp">

            <!-- Profile Picture and Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Profile Picture (Circle) -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_picture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF6D1F" />

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user@email.com"
                        android:textColor="#B0B0B0"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_profile_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bio will appear here"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!-- Edit Profile Button -->
                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Edit Profile"
                    android:textColor="#121212"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FF6D1F" />

                <!-- Message Button (for other users) -->
                <Button
                    android:id="@+id/btn_message"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Message"
                    android:textColor="#121212"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#1E88E5"
                    android:visibility="gone" />

                <!-- Follow/Following Button -->
                <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Follow"
                    android:textColor="#121212"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FF6D1F" />

            </LinearLayout>

        </LinearLayout>

        <!-- User Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#2C2C2C"
            android:paddingVertical="16dp">

            <!-- Posts Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_posts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FF6D1F"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts"
                    android:textColor="#B0B0B0"
                    android:textSize="12sp"/>

            </LinearLayout>

            <!-- Following Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FF6D1F"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textColor="#B0B0B0"
                    android:textSize="12sp"/>

            </LinearLayout>

            <!-- Followers Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FF6D1F"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textColor="#B0B0B0"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- My Posts Header -->
        <TextView
            android:id="@+id/tv_my_posts_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Posts"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="#232323"/>

        <!-- User's Posts RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMyPosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>

        <!-- Empty State -->
        <TextView
            android:id="@+id/tv_no_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No posts yet. Create your first post!"
            android:textColor="#808080"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:indeterminateTint="#FF6D1F"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>